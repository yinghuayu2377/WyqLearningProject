<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/click_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线性布局" />

    <Button
        android:id="@+id/click_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="瀑布流布局" />

    <Button
        android:id="@+id/click_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网格布局" />

    <Button
        android:id="@+id/click_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="根据type展示不同ViewHolder" />

    <Button
        android:id="@+id/click_button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="双层RecyclerView嵌套" />

    <Button
        android:id="@+id/click_button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="单层RecyclerView实现点击展开、折叠item" />
</LinearLayout>